datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UserProfile {
  id        Int      @id @default(autoincrement())
  createdOn DateTime @default(now())
  eoa       String   @unique @db.VarChar(80)
  pubKey    String   @unique @db.VarChar(130)
  secretKey String   @unique @db.VarChar(110)
  isEOAWeb2 Boolean  @default(false)

  forms         Form[]
  formResponses FormResponse[]

  @@index([eoa, pubKey])
}

enum Access {
  public
  private
  protected
}

model Form {
  id          String      @id @default(uuid())
  createdOn   DateTime    @default(now())
  updatedOn   DateTime    @default(now())
  title       String      @db.VarChar(300)
  cid         String      @unique @db.VarChar(64)
  isClosed    Boolean     @default(false)
  userId      Int
  user        UserProfile @relation(fields: [userId], references: [id])
  ownerEOA    String      @db.VarChar(80)
  ownerpubKey String      @db.VarChar(130)
  access      Access      @default(private)

  formResponses FormResponse[]
  FormStats     FormStats[]

  notifications Notification[]
  FormCommonKey FormCommonKey[]
}

model FormCommonKey {
  id     Int    @id @default(autoincrement())
  formId String
  form   Form   @relation(fields: [formId], references: [id])
  key    String @unique @db.VarChar(300)
}

model FormResponse {
  id          String      @id @default(uuid())
  createdOn   DateTime    @default(now())
  updatedOn   DateTime    @default(now())
  formId      String
  form        Form        @relation(fields: [formId], references: [id])
  ownerEOA    String      @db.VarChar(80)
  ownerpubKey String      @db.VarChar(130)
  cid         String      @unique @db.VarChar(64)
  userId      Int
  user        UserProfile @relation(fields: [userId], references: [id])
  access      Access      @default(private)
}

model FormStats {
  id               Int      @id @default(autoincrement())
  createdOn        DateTime @default(now())
  updatedOn        DateTime @default(now())
  numberOfResponse Int      @default(0)
  stats            Json

  formId String
  form   Form   @relation(fields: [formId], references: [id])
}

model Notification {
  id        Int      @id @default(autoincrement())
  formId    String
  form      Form     @relation(fields: [formId], references: [id])
  userId    Int
  createdOn DateTime @default(now())
  hasSeen   Boolean  @default(false)

  @@index([formId, userId])
}
